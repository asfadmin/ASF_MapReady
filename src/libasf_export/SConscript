Import("env")
env = env.Clone()

env.AppendUnique(CPPPATH = [
        "#include/",
        "#src/asf/",
        "#src/libasf_raster/",
        "#src/asf_meta/",
        "#src/libasf_proj/",
        "#src/libasf_vector/",
        "/usr/include/libshp",
        "#src/libasf_import/",
        ])

env.ParseConfig("pkg-config --cflags --libs libgeotiff")
env.ParseConfig("pkg-config --cflags --libs glib-2.0")

libs = env.SharedLibrary("libasf_export", [
        "asf_export.c",
        "export_band.c",
        "export_netcdf.c",
        "export_hdf.c",
        "export_polsarpro.c",
        "export_as_envi.c",
        "export_as_esri.c",
        "util.c",
        "keys.c",
        "brs2jpg.c",
        "write_line.c",
        ])

products = {"libs": libs}

# run the unit test, and set its dependencies
test_program = None
test_result = env.UnitTest("test.semaphore", test_program)
for product in products.values():
    Depends(test_result, product)

Return("products")
