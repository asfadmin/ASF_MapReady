Import("globalenv")
localenv = globalenv.Clone()

localenv.AppendUnique(CPPPATH = [
        "#include/",
        "#src/asf/",
        "#src/libasf_raster/",
        "#src/asf_meta/",
        "#src/libasf_proj/",
        "#src/libasf_vector/",
        "/usr/include/libshp",
        "#src/libasf_import/",
        ])

localenv.ParseConfig("pkg-config --cflags --libs libgeotiff")
localenv.ParseConfig("pkg-config --cflags --libs glib-2.0")

libs = localenv.SharedLibrary("libasf_export", [
        "asf_export.c",
        "export_band.c",
        "export_netcdf.c",
        "export_hdf.c",
        "export_polsarpro.c",
        "export_as_envi.c",
        "export_as_esri.c",
        "util.c",
        "keys.c",
        "brs2jpg.c",
        "write_line.c",
        ])

globalenv.Install(globalenv["inst_dirs"]["libs"], libs)

# run the unit test, and set its dependencies
test_result = localenv.UnitTest("test.semaphore", None)
localenv.Depends(test_result, [libs])
