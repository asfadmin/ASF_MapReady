        ])

shares = [
     localenv.Dir([
        "#src/libasf_import/sentinel",
     ]),
]

localenv.Install(globalenv["inst_dirs"]["libs"], libs)
localenv.Install(globalenv["inst_dirs"]["shares"], shares)

